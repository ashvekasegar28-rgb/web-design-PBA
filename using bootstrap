<style>
/* Page sections */
.page {
    display: none;
    padding-top: 120px;
    padding-bottom: 40px;
}
.page.active {
    display: block;
}

/* Rounded images */
.round-img {
    border-radius: 20px;
    box-shadow: 0 0 15px rgba(0,0,0,0.2);
    width: 100%;
    max-width: 350px;
}

/* Smooth fade animation */
.fade {
    opacity: 0;
    animation: fadeIn 0.8s forwards;
}
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
}
</style>
